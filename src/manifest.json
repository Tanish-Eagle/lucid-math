{
  "manifest_version": 3,
  "name": "Lucid Math",
  "version": "1.0.0",
  "description": "Converts MathML content to plaintext for accessibility.",
  "author": "Tanish Shrivastava",
  "homepage_url": "https://github.com/Tanish-Eagle/lucid-math",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "converter.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon_48.png",
    "96": "icon_96.png",
    "128": "icon_128.png"
  }
}